<Window x:Class="OurChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BOT ADMIN PANEL" 
        Height="720" 
        Width="1280"
        MinHeight="720"
        MinWidth="1280"
        Background="#2C2F33"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Color Brushes -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#2C2F33"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#36393F"/>
        <SolidColorBrush x:Key="DarkBg" Color="#23272A"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#5865F2"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#43B581"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F04747"/>
        <SolidColorBrush x:Key="Black" Color="#000000"/>
        <SolidColorBrush x:Key="White" Color="#FFFFFF"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBg}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="BorderBrush" Value="{StaticResource Black}"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                    <Setter Property="Foreground" Value="{StaticResource Black}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header spanning both columns -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="{StaticResource AccentBlue}" 
                BorderBrush="{StaticResource Black}" 
                BorderThickness="6,6,6,8"
                Padding="25">
            <TextBlock Text="◢ BOT CONTROL ◣" 
                       FontFamily="Courier New"
                       FontWeight="Bold"
                       FontSize="36"
                       Foreground="{StaticResource Black}"
                       HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="White" 
                                    ShadowDepth="3" 
                                    Direction="315" 
                                    BlurRadius="0"
                                    Opacity="1"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Sidebar Navigation -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="{StaticResource DarkBg}"
                BorderBrush="{StaticResource Black}"
                BorderThickness="6,0,3,6"
                Padding="15">
            <StackPanel>
                <TextBlock Text="NAVIGATION" 
                         FontFamily="Courier New"
                         FontWeight="Bold"
                         FontSize="16"
                         Foreground="{StaticResource White}"
                         Margin="0,0,0,15"/>

                <Button x:Name="btnDashboard" Content="▶ DASHBOARD" Style="{StaticResource NavButton}" Click="NavigateToDashboard"/>
                <Button x:Name="btnServers" Content="▶ SERVERS" Style="{StaticResource NavButton}" Click="NavigateToServers"/>
                <Button x:Name="btnControls" Content="▶ CONTROLS" Style="{StaticResource NavButton}" Click="NavigateToControls"/>
                <Button x:Name="btnLogs" Content="▶ LOGS" Style="{StaticResource NavButton}" Click="NavigateToLogs"/>
                <Button x:Name="btnSettings" Content="▶ SETTINGS" Style="{StaticResource NavButton}" Click="NavigateToSettings"/>
            </StackPanel>
        </Border>

        <!-- Main Content Frame -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="{StaticResource SecondaryBg}"
                BorderBrush="{StaticResource Black}"
                BorderThickness="3,0,6,6">
            <Frame x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Border>
    </Grid>
</Window>