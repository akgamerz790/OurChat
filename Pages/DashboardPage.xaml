<Page x:Class="OurChat.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Page.Resources>
        <!-- Your existing colors -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#2C2F33"/>
        <SolidColorBrush x:Key="DarkBg" Color="#23272A"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#5865F2"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#43B581"/>
        <SolidColorBrush x:Key="TextGray" Color="#99AAB5"/>
        <SolidColorBrush x:Key="Black" Color="#000000"/>
        <SolidColorBrush x:Key="White" Color="#FFFFFF"/>

        <!-- NEW BOOTSTRAP STYLES -->
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="Margin" Value="0,10,0,15"/>
        </Style>

        <Style x:Key="StatusCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Black}"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource Black}"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- TITLE -->
            <TextBlock Text="DASHBOARD" Style="{StaticResource PageTitle}"/>

            <!-- STATS CARDS -->
            <Border Background="{StaticResource DarkBg}" 
                    BorderBrush="{StaticResource Black}" 
                    BorderThickness="6"
                    Margin="0,0,0,20">
                <UniformGrid Rows="1" Columns="4">
                    <Border Style="{StaticResource StatusCard}">
                        <StackPanel>
                            <TextBlock Text="STATUS" 
                                       FontFamily="Courier New"
                                       FontSize="11"
                                       Foreground="{StaticResource TextGray}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="ONLINE" 
                                       FontFamily="Courier New"
                                       FontWeight="Bold"
                                       FontSize="24"
                                       Foreground="{StaticResource AccentGreen}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StatusCard}">
                        <StackPanel>
                            <TextBlock Text="SERVERS" 
                                       FontFamily="Courier New"
                                       FontSize="11"
                                       Foreground="{StaticResource TextGray}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="42" 
                                       FontFamily="Courier New"
                                       FontWeight="Bold"
                                       FontSize="24"
                                       Foreground="{StaticResource AccentGreen}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StatusCard}">
                        <StackPanel>
                            <TextBlock Text="USERS" 
                                       FontFamily="Courier New"
                                       FontSize="11"
                                       Foreground="{StaticResource TextGray}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="8,432" 
                                       FontFamily="Courier New"
                                       FontWeight="Bold"
                                       FontSize="24"
                                       Foreground="{StaticResource AccentGreen}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StatusCard}">
                        <StackPanel>
                            <TextBlock Text="PING" 
                                       FontFamily="Courier New"
                                       FontSize="11"
                                       Foreground="{StaticResource TextGray}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="45ms" 
                                       FontFamily="Courier New"
                                       FontWeight="Bold"
                                       FontSize="24"
                                       Foreground="{StaticResource AccentGreen}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Border>

            <!-- QUICK ACTIONS -->
            <TextBlock Text="QUICK ACTIONS" Style="{StaticResource SectionTitle}"/>
            
            <WrapPanel>
                <Button Content="VIEW SERVERS" 
                        Style="{StaticResource ActionButton}"
                        Background="{StaticResource AccentBlue}"
                        Foreground="{StaticResource Black}"/>
                <Button Content="SEND MESSAGE" 
                        Style="{StaticResource ActionButton}"
                        Background="{StaticResource AccentGreen}"
                        Foreground="{StaticResource Black}"/>
                <Button Content="VIEW LOGS" 
                        Style="{StaticResource ActionButton}"
                        Background="{StaticResource AccentBlue}"
                        Foreground="{StaticResource Black}"/>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
