<Page x:Class="OurChat.Pages.LogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Page.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="DarkBg" Color="#23272A"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#5865F2"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F04747"/>
        <SolidColorBrush x:Key="Black" Color="#000000"/>
        <SolidColorBrush x:Key="White" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextGray" Color="#99AAB5"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#43B581"/>

        <!-- BOOTSTRAP STYLES -->
        <Style x:Key="SectionHeader" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderThickness" Value="0,0,0,4"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ClearButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Setter Property="Foreground" Value="{StaticResource Black}"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource Black}"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="LogViewer" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Black}"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="Height" Value="450"/>
        </Style>

        <Style x:Key="LogEntry" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Page.Resources>

    <StackPanel Margin="20">
        
        <!-- HEADER WITH BUTTON -->
        <Border Style="{StaticResource SectionHeader}">
            <Grid>
                <TextBlock Text="▶ SYSTEM LOGS" 
                           FontFamily="Courier New"
                           FontWeight="Bold"
                           FontSize="24"
                           Foreground="{StaticResource White}"/>
                <Button Content="CLEAR LOGS" Style="{StaticResource ClearButton}" Click="ClearLogs"/>
            </Grid>
        </Border>

        <!-- LOG VIEWER -->
        <Border Style="{StaticResource LogViewer}">
            <ScrollViewer x:Name="LogScroller" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="LogContainer">
                    <TextBlock Style="{StaticResource LogEntry}">
                        <Run Text="[14:32:01]" Foreground="{StaticResource TextGray}"/>
                        <Run Text=" ✓ Bot connected successfully" Foreground="{StaticResource SuccessGreen}"/>
                    </TextBlock>
                    
                    <TextBlock Style="{StaticResource LogEntry}">
                        <Run Text="[14:32:15]" Foreground="{StaticResource TextGray}"/>
                        <Run Text=" → Loaded 24 commands" Foreground="{StaticResource White}"/>
                    </TextBlock>
                    
                    <TextBlock Style="{StaticResource LogEntry}">
                        <Run Text="[14:33:42]" Foreground="{StaticResource TextGray}"/>
                        <Run Text=" ✓ Message sent to #general" Foreground="{StaticResource SuccessGreen}"/>
                    </TextBlock>
                    
                    <TextBlock Style="{StaticResource LogEntry}">
                        <Run Text="[14:35:12]" Foreground="{StaticResource TextGray}"/>
                        <Run Text=" → User joined: CoolGamer#1234" Foreground="{StaticResource White}"/>
                    </TextBlock>
                    
                    <TextBlock Style="{StaticResource LogEntry}">
                        <Run Text="[14:37:28]" Foreground="{StaticResource TextGray}"/>
                        <Run Text=" ✗ Rate limit exceeded" Foreground="{StaticResource AccentRed}"/>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </StackPanel>
</Page>
